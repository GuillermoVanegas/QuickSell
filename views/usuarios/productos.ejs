<div class="container mt-5" id="carrusel">
    <div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="2200">
        
        <div class="carousel-inner">
            <% products.forEach((producto, index) => { %>
                <div class="carousel-item <% if (index === 0) { %>active<% } %>">
                    <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><%= producto.nombre %></h5>
                                    <p class="card-text">Correo: <%= producto.categoria %></p>
                                    <p class="card-text">Direccion: <%= producto.precio %></p>
                                    <p class="card-text">Etiqueta: <%= producto.stock %></p>
                                    <img src="/images/<%= producto.foto %>" width="100px" alt="">
                                </div>
                            </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true" aria-setsize="300px"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next" id="carouselExample">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

