<%- include("../templates/encabezado.ejs") %>
<style>




body {
      background: linear-gradient(135deg, #d578da 25%, transparent 25%) -50px 0,
                  linear-gradient(135deg, transparent 25%, #bc71d3 75%) -50px 0,
                  linear-gradient(135deg, #3498db 25%, transparent 25%),
                  linear-gradient(135deg, transparent 75%, #3498db 25%);
      background-size: 400px 200px; /* Tamaño de las rayas */
      background-color: #220580; /* Color de fondo detrás de las rayas */
      font-family: 'Arial', sans-serif; /* Tipo de fuente para el texto */
    }

    header {
        
        padding: 20px;
        text-align: center; /* Alinear el texto al centro */

        

    }

    nav {
        display: flex;
        justify-content: center; /* Centrar los elementos horizontalmente */
        align-items: center; /* Centrar los elementos verticalmente */
        background-color: #444cf7; /* Fondo pastel */
        border-radius: 20px; /* Bordes curvos */
        overflow: hidden; /* Evitar desbordamiento de bordes curvos */


        
    }

    .menu-item {
        text-decoration: none;
        color: #ffffff; /* Color de enlaces en tono pastel */
        font-size: 22px; /* Tamaño de fuente más pequeño */
        transition: color 0.3s;
        transition: transform 0.3s;
        padding: 25px 30px; /* Espaciado interno */
        margin: 0 5px; /* Espaciado entre elementos del menú */
        border-radius: 14px 14px; /* Bordes curvos */
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-style: bold;
    }

    .menu-item:hover  {
        background-color: rgb(229, 233, 238);   
        color: #444cf7;
        text-decoration: none;
        font-size: 23px;
        transform: scale(1.1);
        border-radius: 14px;
    }

    .menunav {
        width: 100%;
        height: 50px;
        border-radius: 20px; /* Bordes curvos */
        overflow: hidden; /* Evitar desbordamiento de bordes curvos */
    }

    .user-icon {
        background-color: white;   
        color: #444cf7;
        text-decoration: none;
        font-size: 22px;
        border-radius: 14px 14px;
        padding: 3px;
        transition: transform 0.3s;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-style: bold;
    }

    .user-icon:hover {
        transform: scale(1.1); /* Escalar el elemento al 110% al pasar el ratón por encima */
        text-decoration: none;
    }
</style>
</head>
<body>

<header>
    <nav class="menunav">
        
        <a class="menu-item" href="/inicio/<%=user.id%>">INICIO</a>
        <a class="menu-item" href="/comprar/<%=user.id%>">SERVICIO/CLIENTE</a>
        <a class="menu-item" href="/perfil/<%=user.id%>">PERFIL</a>
        
        <a class="user-icon" href='/cerrarSesion'">CERRAR SESION</a>
    </nav>
</header>

</body>
</html>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card p-4">
                <form action="/realizarCompra" method="post">
                    <label for="producto">Nombre Del Cliente:</label>
                <input type="hidden" name="id" id="id" value="<%=user.id%>">
                        <input type="hidden" name="nombre" id="nombre" value="<%=user.nombre%>">
                <input name="producto" id="producto" class="form-control">
                    
            

                <!-- Tamaño -->
                <label for="tamaño">Servicio:</label>
                <input type="text" name="tamaño" id="tamaño" class="form-control" value="(microblandig y pestañas 1x1)" placeholder="Agrega más texto...">


                <label for="cantidad">Fecha:</label>
                <input type="date" name="cantidad" id="cantidad" class="form-control" value="2024-03-06" min="2024-03-06">

                <input type="submit" value="Generar Cita" class="btn btn-primary mt-3">
                </form>
                <!-- Fin del formulario de compra -->
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos generales */
   

    /* Estilos para el formulario de compra */
    form {
        margin-top: 10px;
        display: flex;
        flex-direction: column;
    }

    label {
        margin-top: 5px;
        font-weight: bold;
    }

    select,
    input {
        margin-bottom: 10px;
        padding: 8px;
    }

    .btn-primary {
        background-color: #444cf7; /* Color morado */
        color: #fff;
        border: 1px solid #444cf7; /* Color morado */
        border-radius: 8px;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #3a40c2; /* Color morado oscuro */
    }

    /* Estilos para el contenedor de la tarjeta */
    .card {
        border: 1px solid #ddd;
        border-radius: 12px;
        overflow: hidden;
        transition: box-shadow 0.3s;
    }

    .card:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
